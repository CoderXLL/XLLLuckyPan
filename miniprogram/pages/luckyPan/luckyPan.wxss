/* miniprogram/pages/luckyPan/luckyPan.wxss */
.background-container {
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  object-fit: fill;
}

.lucky_container {
  position: absolute;
  left: 60rpx;
  right: 60rpx;
  width: 590rpx;
  height: 590rpx;
  padding: 20rpx;
  margin-top: 50rpx;
  background: #792db3;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  border-radius: 30rpx;
  box-shadow: 0 0 6rpx 6rpx #3f0769;
}

.lucky_row {
  width:580rpx;
  height:180rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.lucky_item {
  height: 100%;
  width: 180rpx;
  background-color: red;
  border-radius: 8rpx;
  object-fit: cover;
  position: relative;
}

.lucky_item.hilighted {
  border: 4rpx solid yellow;
  width: 172rpx;
  height: 172rpx;
}

.lucky_item text {
  color: blue;
  background-color: yellow;
  text-align: center;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  line-height: 180rpx;
  border-radius: 8rpx;
}

.lucky_item_btn {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: transparent;
}